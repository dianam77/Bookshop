@model DataAccess.Models.Author

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-green-400 via-blue-300 to-purple-300 min-h-screen">

    <div class="container mx-auto p-6">
        <h1 class="text-4xl font-extrabold text-center text-black-50 mb-8">ایجاد نویسنده</h1>

        <!-- Author Creation Form -->
        <div class="max-w-lg mx-auto bg-white shadow-xl rounded-xl p-8 space-y-6">
            <h4 class="text-xl font-semibold text-gray-700">مشخصات نویسنده را وارد کنید</h4>
            <hr class="border-t-2 border-gray-400 mb-6" />

            <!-- Begin Form -->
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

                <!-- Name Field -->
                <div class="form-group">
                    <label asp-for="Name" class="block text-lg font-semibold text-gray-800">نام</label>
                    <input asp-for="Name" class="form-control mt-2 p-3 border-2 border-gray-300 rounded-lg shadow-md focus:ring-4 focus:ring-blue-500 w-full" />
                    <span asp-validation-for="Name" class="text-red-500"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group">
                    <input type="submit" value="ذخیره" class="btn px-6 py-3 bg-gradient-to-r from-indigo-500 via-purple-500 to-blue-500 hover:bg-gradient-to-l text-white font-semibold rounded-lg shadow-md w-full transition duration-300 ease-in-out transform hover:scale-105" />
                </div>
            </form>
        </div>

        <!-- Back Link -->
        <div class="mt-6 text-center">
            <a asp-action="Index" class="text-blue-500 hover:text-blue-700 text-lg transition duration-200">بازگشت به لیست</a>
        </div>

    </div>

</body>
</html>
