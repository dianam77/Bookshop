@model DataAccess.Models.Author

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-red-300 via-orange-200 to-red-400 min-h-screen">

    <div class="container mx-auto p-6">
        <h1 class="text-4xl font-extrabold text-center text-black-50 mb-8">حذف نویسنده</h1>

        <!-- Confirmation Prompt -->
        <div class="max-w-lg mx-auto bg-white shadow-xl rounded-xl p-8 space-y-6">
            <h3 class="text-xl font-semibold text-red-600">آیا مطمئن هستید که می خواهید این نویسنده را حذف کنید؟</h3>
            <hr class="border-t-2 border-red-400 mb-6" />

            <dl class="space-y-4">
                <!-- Author Name -->
                <div class="flex justify-between items-center">
                    <dt class="text-lg font-medium text-red-600">نام:</dt>
                    <dd class="text-lg text-gray-700">@Html.DisplayFor(model => model.Name)</dd>
                </div>
            </dl>

            <!-- Delete Form -->
            <form asp-action="Delete" class="flex justify-between items-center space-x-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="px-6 py-2 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-lg shadow-md transition duration-300 ease-in-out transform hover:scale-105">
                    حذف
                </button>
                <a asp-action="Index" class="text-blue-500 hover:text-blue-700 text-lg transition duration-200">بازگشت به لیست</a>
            </form>
        </div>

    </div>

</body>
</html>
