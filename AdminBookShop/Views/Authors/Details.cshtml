@model DataAccess.Models.Author

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-blue-300 via-pink-200 to-blue-400 min-h-screen">

    <div class="container mx-auto p-6">
        <h1 class="text-4xl font-extrabold text-center text-black-50 mb-8">مشخصات نویسنده</h1>

        <!-- Author Details -->
        <div class="max-w-lg mx-auto bg-white shadow-xl rounded-xl p-8 space-y-6">
            <h4 class="text-xl font-semibold text-indigo-700">نویسنده</h4>
            <hr class="border-t-2 border-indigo-300" />

            <dl class="space-y-4">
                <!-- Author Name -->
                <div class="flex justify-between items-center">
                    <dt class="text-lg font-medium text-indigo-600">نام:</dt>
                    <dd class="text-lg text-gray-700">@Html.DisplayFor(model => model.Name)</dd>
                </div>
            </dl>
        </div>

        <!-- Action Links -->
        <div class="mt-6 text-center">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="text-blue-500 hover:text-blue-700 text-lg transition duration-200">ادیت</a> |
            <a asp-action="Index" class="text-blue-500 hover:text-blue-700 text-lg transition duration-200">بازگشت به لیست</a>
        </div>
    </div>

</body>
</html>
