@model DataAccess.Models.Author

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-blue-300 via-pink-200 to-blue-400 min-h-screen">

    <div class="container mx-auto p-6">
        <h1 class="text-4xl font-extrabold text-center text-black-50 mb-8">ویرایش نویسنده</h1>

        <!-- Edit Form -->
        <div class="max-w-lg mx-auto bg-white shadow-xl rounded-xl p-8 space-y-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Name Field -->
                <div class="form-group">
                    <label asp-for="Name" class="block text-lg font-semibold text-indigo-700">نام</label>
                    <input asp-for="Name" class="form-control mt-2 p-3 border-2 border-indigo-300 rounded-lg shadow-md focus:ring-4 focus:ring-indigo-500 w-full" />
                    <span asp-validation-for="Name" class="text-red-500"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group">
                    <input type="submit" value="ذخیره" class="btn px-6 py-3 bg-gradient-to-r from-pink-500 via-purple-500 to-indigo-500 hover:bg-gradient-to-l text-white font-semibold rounded-lg shadow-md w-full transition duration-300 ease-in-out transform hover:scale-105" />
                </div>
            </form>
        </div>

        <!-- Back to List Link -->
        <div class="mt-6 text-center">
            <a asp-action="Index" class="text-black-50 hover:text-yellow-300 text-lg transition duration-200">بازگشت به لیست</a>
        </div>
    </div>

</body>
</html>
