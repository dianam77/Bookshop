@model IEnumerable<DataAccess.Models.Author>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-blue-300 via-pink-200 to-blue-400 min-h-screen">

    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-extrabold text-center text-black-50 mb-6">لیست نویسندگان</h1>

        <div class="mb-6 text-center">
            <a asp-action="Create"
               class="btn px-4 py-2 bg-gradient-to-r from-pink-500 via-purple-500 to-indigo-500 hover:bg-gradient-to-l text-white font-semibold rounded-lg shadow-md w-full sm:w-auto transition duration-300 ease-in-out transform hover:scale-105">
                نویسنده جدید ایجاد کنید
            </a>
        </div>

        <!-- Author Table -->
        <div class="overflow-x-auto bg-white shadow-xl rounded-xl p-4 max-w-4xl mx-auto">
            <table class="min-w-full table-auto text-gray-800 border-separate border-spacing-0 text-sm">
                <thead>
                    <tr class="bg-gray-600 text-white">
                        <th class="px-4 py-2 text-left font-bold">نام</th>
                        <th class="px-4 py-2 text-left font-bold">اقدامات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)

                    {
                        <tr class="border-b hover:bg-gray-100">
                            <td class="px-4 py-2 text-left font-semibold">@Html.DisplayFor(modelItem => item.Name)</td>
                            <td class="px-4 py-2 text-left font-semibold">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-500 hover:text-blue-700">ادیت</a> |
                                <a asp-action="Details" asp-route-id="@item.Id" class="text-green-500 hover:text-green-700">مشخصات</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-500 hover:text-red-700">حذف</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
