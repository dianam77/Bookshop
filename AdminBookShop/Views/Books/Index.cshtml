@model IEnumerable<DataAccess.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-blue-300 via-pink-200 to-blue-400 min-h-screen">

    <div class="container mx-auto p-6">
        <h1 class="text-4xl font-extrabold text-center text-black-50 mb-8">فهرست کتاب ها</h1>

        <div class="mb-6">
            <a asp-action="Create" class="btn px-6 py-3 bg-gradient-to-r from-pink-500 via-purple-500 to-indigo-500 hover:bg-gradient-to-l text-white font-semibold rounded-lg shadow-md w-full sm:w-auto transition duration-300 ease-in-out transform hover:scale-105">ایجاد کتاب جدید</a>
        </div>

        <!-- Book Table -->
        <div class="overflow-x-auto bg-white shadow-xl rounded-xl p-6">
            <table class="table-auto w-full text-gray-800">
                <thead>
                    <tr>
                        <th class="px-4 py-2 text-left text-lg font-semibold text-indigo-600">عنوان</th>
                        <th class="px-4 py-2 text-left text-lg font-semibold text-indigo-600">توضیحات</th>
                        <th class="px-4 py-2 text-left text-lg font-semibold text-indigo-600">قيمت</th>
                        <th class="px-4 py-2 text-left text-lg font-semibold text-indigo-600">تصویر</th>
                        <th class="px-4 py-2 text-left text-lg font-semibold text-indigo-600">نویسنده</th>
                        <th class="px-4 py-2 text-left text-lg font-semibold text-indigo-600">اقدامات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)

                    {
                        <tr class="border-b hover:bg-gray-100">
                            <td class="px-4 py-2">@Html.DisplayFor(modelItem => item.Title)</td>
                            <td class="px-4 py-2">@Html.DisplayFor(modelItem => item.Description)</td>
                            <td class="px-4 py-2">@Html.DisplayFor(modelItem => item.Price)</td>
                            <td class="px-4 py-2">
                                @if (!string.IsNullOrEmpty(item.Img))

                                {
                                    <img src="@item.Img" width="100" alt="Book Image" class="rounded-md shadow-sm" />
                                }

                                else

                                {
                                    <span class="text-pink-500">No Image Available</span>
                                }
                            </td>
                            <td class="px-4 py-2">
                            <td class="px-4 py-2">
                                    @(item.Author != null ? item.Author.Name : "Unknown Author")
                            </td>
                            <td class="px-4 py-2 space-x-3">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-500 hover:text-blue-700">ادیت</a> |
                                <a asp-action="Details" asp-route-id="@item.Id" class="text-green-500 hover:text-green-700">مشخصات</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-500 hover:text-red-700">حذف</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <br /><br />
</body>

</html>
