@model DataAccess.Models.Comment

@{
    ViewData["Title"] = "Delete Comment";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-red-100 via-white to-gray-200 min-h-screen">

    <div class="container mx-auto p-6">
        <h1 class="text-4xl font-extrabold text-center text-red-600 mb-6">حذف نظر</h1>

        <!-- Confirmation Box -->
        <div class="bg-white shadow-xl rounded-xl p-8">
            <h3 class="text-2xl font-bold text-red-700 mb-4 text-center">
                آیا مطمئن هستید که می خواهید این نظر را حذف کنید؟
            </h3>

            <!-- Comment Details -->
            <div class="bg-gray-100 p-6 rounded-lg mb-6">
                <h4 class="text-lg font-semibold text-gray-800 mb-2">جزئیات نظرات</h4>
                <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <dt class="text-gray-600 font-medium">Text</dt>
                        <dd class="text-gray-800">@Html.DisplayFor(model => model.Text)</dd>
                    </div>
                </dl>
            </div>

            <!-- Confirmation Form -->
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="flex justify-center gap-4 mt-4">
                    <button type="submit" class="px-6 py-3 bg-gradient-to-r from-red-500 to-red-700 text-white font-semibold rounded-lg shadow-md hover:bg-red-800 hover:shadow-lg transition-all">
                        تأیید حذف
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="px-6 py-3 border-2 border-gray-600 text-gray-600 rounded-lg hover:bg-gray-600 hover:text-white font-semibold shadow-md transition-all">
                        بازگشت به لیست
                    </a>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
